{# templates/broadcast/Message.stream.html.twig #}
{% block create %}
    <turbo-stream action="append" targets="#messages">
        <template>
            <div id="{{ 'message_' ~ id }}">{{ entity.content }} (#{{ id }})</div>
        </template>
    </turbo-stream>
{% endblock %}

{% block update %}
    <turbo-stream action="update" targets="#message_{{ id }}">
        <template>
            {{ entity.content }} (#{{ id }}, updated)
        </template>
    </turbo-stream>
{% endblock %}

{% block remove %}
    <turbo-stream action="remove" targets="#message_{{ id }}"></turbo-stream>
{% endblock %}